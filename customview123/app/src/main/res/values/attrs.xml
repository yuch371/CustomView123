<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        	 申明一个命名空间，命名空间下有3个属性名称：Text 、Oriental、Src
          ,以及其名称类型、默认值
    -->
    <declare-styleable name="MyCircle">
        <attr name="demoText" format="reference|string"></attr>
        <attr name="demoColor" format="reference|color"></attr>
        <!--   attr name="textColor" format="color" />    -->  
        <attr name="demoCircleR" format="dimension" ></attr>         
        <attr name="Oriental">
            <enum name="Horizontal" value="1"></enum>
            <enum name="Vertical" value="0"></enum>
        </attr>
        <attr name="Src" format="reference|integer"></attr>
    </declare-styleable>

</resources>
